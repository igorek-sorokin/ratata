<section class="container mx-auto pt-6" id="contact">
    <h2
            class="text-lg md:text-xl lg:text-2xl xl:text-3xl text-center font-bold uppercase font-display italic mb-5"
    >
        Ищи нас здесь
    </h2>

    <div class="flex flex-col lg:flex-row items-center gap-4">
        <div class="w-full text-center lg:text-left lg:w-1/3  flex flex-col gap-4">
            <div>
                <p class="text-lg">
                    Московская область,<br>город Лобня
                </p>
                <a href="/navigation" class="text-accent text-opacity-80 hover:text-opacity-100 underline text-base">Как
                    добраться?</a>
            </div>
            <div class="flex flex-col  gap-2 items-center lg:items-start">
                <button type="button"
                        class="open-modal-js text-sm bg-accent bg-opacity-80 text-white flex justify-center items-center h-[50px] min-w-[200px] transition hover:bg-opacity-100">
                    Оставить заявку
                </button>
                <button type="button"
                        class="open-payment-modal-js text-sm bg-black bg-opacity-0 border-[1px] border-accent flex justify-center items-center h-[50px] min-w-[200px] transition hover:text-white hover:bg-opacity-80 hover:bg-accent"
                >Оплатить
                </button
                >
            </div>
            <div class="flex flex-col gap-1">
                <p class="text-base">+7 499 455-466-9 <br>
                    на связи с 10:00 до 20:00</p>
                <p class="text-sm text-secondary">ООО «Ратата»
                    ИНН&nbsp;9717122834</p>
            </div>
        </div>
        <div id="js-map" class="w-full h-[50dvh]"></div>
    </div>
</section>

<script>
    import ymaps from "ymaps";

    ymaps
        .load("https://api-maps.yandex.ru/2.1/?lang=ru_RU")
        .then((maps) => {
            const map = new maps.Map("js-map", {
                center: [56.031467, 37.452883],
                zoom: 17,
                сontrols: ["zoomControl", "routeButtonControl"],
            });
            let placemark = new maps.Placemark([56.031467, 37.452883], {}, {});
            map.geoObjects.add(placemark);
        })
        .catch((error) => console.log("Failed to load Yandex Maps", error));
</script>

---

<section class="trainers-section" id="trainers">
  <h2 class="trainers-section__title mb-2">Лучшие тренеры</h2>
  <p class="trainers-section__subtitle mb-4 md:mb-0">Партнёры компании «Ратата» —<br>
    опытные водители и даже мастера автоспорта</p>
  <div class="trainers container mx-auto py-20">
    <div class="other-trainers">
      {
        trainersList.map((trainer) => (
        <figure class="other-trainer">
          <img src={trainer.img.src} alt="other trainer" />
          <figcaption class="other-trainer__name">{trainer.name}</figcaption>
        </figure>
        ))
      }
    </div>
    <div class="other-trainers-swiper swiper">
      <div class="swiper-wrapper pb-8">
        {
          trainersList.map((trainer) => (
          <figure class="other-trainer swiper-slide">
            <img src={trainer.img.src} alt="other trainer" />
            <figcaption class="other-trainer__name">{trainer.name}</figcaption>
          </figure>
          ))
        }
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<style>
  :root {
    --swiper-navigation-color: var(--color-primary);
    --swiper-theme-color: var(--color-primary);
    --swiper-pagination-color: var(--color-primary);
  }
  .trainers {
    padding-top: 60px;
    padding-bottom: 90px;
    display: flex;
    gap: 60px;
    /* display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px; */
  }
  .trainers-section__subtitle {
    text-align: center;
    font-size: 24px;
    margin-bottom: 5px;
  }
  .main-trainer {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    position: relative;
  }
  
  .main-trainer__sub-title {
    margin-top: 15px;
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    color:var(--color-primary);
    margin-bottom: 4px;
    width: 115%;
  }
  .main-trainer__sub-text{
    display: flex;
    align-items: center;
    color: var(----color-main);
    gap: 10px;
  }
  .main-trainer__sub-star {
    flex-shrink: 0;
    color: var(--color-accent);
  }
  .trainers-section {
    max-width: 100%;
    overflow-x: hidden;
    background-position: right top;
    background-repeat: no-repeat;
    background-image: url("data:image/svg+xml,%3Csvg width='150' height='360' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M703.505.768 342.08 565.812 0 .768h703.505Z' fill='%235AAFFF'/%3E%3C/svg%3E");
  }

  .other-trainers-swiper.swiper {
    padding: 0 30px;
  }

  .other-trainers-swiper .swiper-button-prev {
    left: 0;
  }

  .other-trainers-swiper .swiper-button-next {
    right: 0;
  }
  .trainers-section__title {
    text-align: center;
  }
  .main-trainer > img {
    position: relative;
    width: 100%;
    z-index: 2;
  }
  .main-trainer__element {
    position: absolute;
    content: "";
    display: block;
    width: 115%;
    height: 25%;
    background: #db3549;
    z-index: 1;
    clip-path: polygon(19% 0%, 100% 0%, 81% 100%, 0% 100%);
  }
  .main-trainer__name {
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    text-align: center;
    position: absolute;
    width: 80%;
    height: 50px;
    bottom: 8px;
    right: 5%;
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    clip-path: polygon(15% 0%, 100% 0%, 85% 100%, 0% 100%);
    color: #ffffff;
  }
  .other-trainers {
    display: none;
    width: 100%;
    grid-template-columns: repeat(4, 1fr);
    gap: 52px;
    align-items: flex-end;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .main-trainer__wrap {
    grid-column-start: 2;
    grid-column-end: 4;
    display: flex;
    justify-content: center;
    gap: 100px;
  }
  .other-trainer {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }
  .other-trainer > img {
    margin-bottom: 20px;
    width: 100%;
    max-height: 300px;
    object-fit: contain;
  }
  .other-trainer__name {
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    color: #2d2d2d;
    margin-bottom: 10px;
    text-align: center;
    white-space: normal;
    width: 150px;
  }
  .other-trainer__desc {
    font-weight: 400;
    font-size: 20px;
    line-height: 25px;
    color: #2d2d2d;
  }
  .main-trainer--mobile {
        display: none;
      }
      .main-trainer--desktop {
        width: 339px;
      }
  @media (max-width: 1023px) {
    .trainers-section {
      background-image: none;
    }
    .trainers {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
      position: relative;
    }
    .trainers-section__title {
      padding: 0 40px;
      font-style: italic;
      font-weight: 700;
      font-size: 35px;
      line-height: 39px;
      text-transform: uppercase;
    }
    .trainers-section__subtitle {
      text-align: center;
      margin-bottom: 50px;
    }
    .trainers-section__title::first-line {
      font-style: italic;
      font-weight: 700;
      font-size: 25px;
      line-height: 28px;
      text-transform: uppercase;
    }
    .trainers {
      flex-direction: column;
      padding: 0 15px;
      gap: 50px;
    }
    .main-trainer__element {
      max-width: 483px;
      width: 100%;
    }
    .main-trainer {
      width: 100%;
      padding-left: 0;
    }
    @media (max-width: 1023px) {
      .main-trainer--mobile {
        display: flex;
        flex-direction: column;
        width: 360px;
        margin: 0 auto;
        padding: 0 15px;
        text-align: center;
      }

      .main-trainer__sub-title {
        width: 100%;
      }

      .main-trainer__sub-text {
        justify-content: center;
      }
      .main-trainer--desktop {
        display: none;
      }
      .trainers {
        grid-template-columns: repeat(1, 1fr);
        gap: 25px;
      }
      .trainers-section__subtitle {
        font-size: 20px;
        line-height: 24px;
        padding: 0 24px;
      }
      .trainers {
        padding-left: 0;
        padding-right: 0;
        gap: 50px;
      }
      .other-trainers-swiper {
        display: none ;
      }
      .other-trainers {
        flex-wrap: nowrap;
        padding: 0 15px;
        padding-bottom: 8px;
        width: 100%;
        overflow-x: scroll;
        display: flex;
        gap: 30px;
      }
      .other-trainers::after {
        display: block;
        position: absolute;
        content: '';
        height: 100%;
        width: 25%;
        right: 0;
        top: 0;
        background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
        pointer-events: none;
      }
      .other-trainers::-webkit-scrollbar {
        width: 4px;
        height: 4px;
        border-radius: 4px;
      }
      /* Track */
      .other-trainers::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
      }
      /* Handle */
      .other-trainers::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
      }
      /* Handle on hover */
      .other-trainers::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
      .other-trainer {
        width: 175px;
      }

      .other-trainer__name {
        text-align: center;
      }
    }
  }
</style>
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline>
var swiper = new Swiper(".other-trainers-swiper", {
      slidesPerView: 3,
      spaceBetween: 30,
      slidesPerGroup: 3,
      loop: true,
      loopFillGroupWithBlank: true,
      breakpoints: {
        1024: {
          slidesPerView: 4,
          spaceBetween: 30,
          slidesPerGroup: 4,
        },
        1400: {
          slidesPerView: 5,
          spaceBetween: 30,
          slidesPerGroup: 5,
        },
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
</script>
